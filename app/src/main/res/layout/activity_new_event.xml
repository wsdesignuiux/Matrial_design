<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".NewEvent">



    <include layout="@layout/toolbar_newevent"/>

    <Spinner
        android:id="@+id/sp_car_name2"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="@drawable/custom_spinner"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:spinnerMode="dropdown" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f000000"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="10dp">

        <customfonts.EditText_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event name"
            android:inputType="text"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="9dp"
            android:textColor="#de000000"
            android:textColorHint="#de000000"
            android:backgroundTint="#1f000000"
            android:textSize="37.67sp" />

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="16dp">

        <customfonts.EditText_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:inputType="text"
            android:maxLines="1"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="14.56dp"
            android:textColor="#000000"
            android:textColorHint="#61000000"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>



    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="#61000000"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:textSize="13.71sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <Spinner
        android:id="@+id/sp_car_name11"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:background="@drawable/custom_spinner"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="25dp"
        android:spinnerMode="dropdown" />

        <View
            android:layout_width="179dp"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:background="#1f000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_car_name12"
                android:layout_width="123dp"
                android:layout_height="44dp"
                android:background="@drawable/custom_spinner"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="#1f000000"/>

        </LinearLayout>


    </LinearLayout>

    <customfonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To"
        android:textColor="#61000000"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:textSize="13.71sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_car_name13"
                android:layout_width="184dp"
                android:layout_height="44dp"
                android:background="@drawable/custom_spinner"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="25dp"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="179dp"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:background="#1f000000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_car_name14"
                android:layout_width="123dp"
                android:layout_height="44dp"
                android:background="@drawable/custom_spinner"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <View
                android:layout_width="120dp"
                android:layout_height="1dp"
                android:background="#1f000000"/>

        </LinearLayout>


    </LinearLayout>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="27dp"
        android:textSize="16sp"
        android:paddingLeft="22dp"
        android:text="All-day"/>
</LinearLayout>
