<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar_chat"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rect_white">


            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gastroenteritis means\ninflammation of stomach as\nwell as the gastrointestinal tract."
                android:textColor="#de000000"
                android:textSize="15.7sp" />

            <ImageView
                android:paddingLeft="10dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cool"/>



        </LinearLayout>

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="18dp"
            android:text="Friday・15:23"
            android:textColor="#8a000000"
            android:textSize="11.7sp" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="17.7dp"
            android:layout_gravity="right"
            android:background="@drawable/rect_white"
            android:paddingLeft="16dp"
            android:paddingTop="9dp"
            android:text="I think it`s COOL place!"
            android:textColor="#de000000"
            android:textSize="15.7sp" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="18dp"
            android:text="Friday・15:23"
            android:textColor="#8a000000"
            android:textSize="11.7sp" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="17.7dp"
            android:layout_gravity="right"
            android:background="@drawable/rect_white"
            android:paddingLeft="16dp"
            android:paddingTop="9dp"
            android:text="Hi man! I find very good flat\nnear Kotti. Let`s roll "
            android:textColor="#de000000"
            android:textSize="15.7sp" />

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="6dp"
            android:layout_marginRight="16.3dp"
            android:text="Not sent. Tap to try again."
            android:textColor="#8a000000"
            android:textSize="11.7sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1f000000"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="28dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView1"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/n2"
                    app:riv_corner_radius="5dip" />

                <LinearLayout
                    android:layout_marginLeft="52dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="9.4dp"
                        android:layout_height="9.4dp"
                        android:src="@drawable/ic_clear_button" />


                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_marginLeft="24dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">


                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView2"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/n2"
                    app:riv_corner_radius="5dip" />

                <LinearLayout
                    android:layout_marginLeft="52dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="9.4dp"
                        android:layout_height="9.4dp"
                        android:src="@drawable/ic_clear_button" />


                </LinearLayout>


            </FrameLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="21dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"/>

            <customfonts.MyTextView_Roboto_Regular
                android:layout_weight="1"
                android:layout_marginLeft="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add text to this message"
                android:textSize="16sp"
                android:textColor="#8a000000"/>

            <LinearLayout
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send_icon" />

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SMS"
                    android:textColor="#8a000000"
                    android:textSize="11.7sp"/>


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
