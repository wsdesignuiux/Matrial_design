                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="35dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6.7dp"
                        android:background="#00000000" />

                </LinearLayout>

            </FrameLayout>

