<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="39.2dp"
            android:layout_height="38.2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.8dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customfonts.MyTextView_Roboto_Bold
                    android:id="@+id/titile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="WSDesign"
                    android:textColor="#000000"
                    android:textSize="16sp" />


                <customfonts.MyTextView_Roboto_Bold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan 16"
                    android:textColor="#4285f4"
                    android:textSize="12sp" />


            </LinearLayout>

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/sub_titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to WSDesign"
                android:textColor="#000000"
                android:textSize="16sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customfonts.MyTextView_Roboto_Light
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subscribe to WSDesign now, and getâ€¦"
                    android:textColor="#000000"
                    android:textSize="13.7sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/start_black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>