<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="39.2dp"
        android:layout_height="38.2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.8dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Bold
                android:id="@+id/titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="WSDesign"
                android:textColor="#000000"
                android:textSize="16sp" />


            <customfonts.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jan 16"
                android:textColor="#4285f4"
                android:textSize="12sp" />


        </LinearLayout>

        <customfonts.MyTextView_Roboto_Bold
            android:id="@+id/sub_titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to WSDesign"
            android:textColor="#000000"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <customfonts.MyTextView_Roboto_Light
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Subscribe to WSDesign now, and getâ€¦"
                android:textColor="#000000"
                android:textSize="13.7sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start_black" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/viewline"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="16dp"
        android:background="#1f000000"/>

    <LinearLayout
        android:id="@+id/linear_promotion"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/offer"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="8.7dp"
            android:orientation="vertical">

        <customfonts.MyTextView_Roboto_Bold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#de000000"
            android:textSize="16sp"
            android:text="Promotions"/>

        <customfonts.MyTextView_Roboto_Light
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#de000000"
            android:textSize="14sp"
            android:text="Behance"/>

        </LinearLayout>

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 new"
            android:textSize="13.7sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:background="@drawable/green_rect"
            android:paddingLeft="9dp"
            android:paddingRight="11dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="16dp"
        android:background="#1f000000"/>

</LinearLayout>